<h1 id="my-trips-title">My Trips</h1>
<div id="circle-large"></div>
<div id="circle-small"></div>

<div id="main">
  <div id="map" data-controller="mapbox" data-mapbox-markers-value="<%= @markers.to_json %>" data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div id="lower">
    <div id="recent-trips">
      <h1>My Recent Trips</h1>
      <li id="trips-list">
        <% @trips.each do |trip| %>
          <ul><%= link_to trip.name, trip_path(trip.id) %></ul>
        <% end %>
      </li>
      <a href="#" id="see-all-button">See all</a>
    </div>
    <div id="buttons">
      <a href="#" id="create-trip-button" data-toggle="modal" data-target="#modalNew">New Trip</a>
    </div>

    <div id="modalNew" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Create a Trip</h2>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <%= simple_form_for(@trip) do |f| %>
            <%= f.label :Trip_title %>
            <%= f.input :name, :placeholder => 'London City Break 2022' %>
            <hr>
            <%= f.label :Where_did_you_go? %>
            <%= f.input :destination_exact, input_html: { data: { geocoder_target: 'address' }, class: 'd-none'}, wrapper_html: {
              data: { controller: 'geocoder', geocoder_api_key_value: ENV["MAPBOX_API_KEY"] }} %>
            <hr>
            <div style="font-weight:bold"><%= f.input :description, :placeholder => 'Had a great time. Would love to come back.' %></div>
            <%= f.submit %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
</div>






    <div id="quotes">
      <p>Many who wander are lost<br><span style="font-style:italic">- Unknown</span> </p>
    </div>
  </div>
</div>
