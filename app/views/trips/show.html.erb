<div id="circle-large"></div>
<div id="circle-small"></div>
<h1 id="show-title"><span id="back-button"><a href="/trips">Back</a></span><%=@trip.name%></h1>
<div id="show-main">
  <div id="photo-and-description">
    <div id="cover-photo" style="background-image: url('<%= cl_image_path @trip.photo.key %>')"></div>
    <div id="trip-description">
      <h1><%= @trip.name%> - <%= @trip.destination_exact%></h1>
      <p id="trip-dates"><%= @trip.date_start %> - <%= @trip.date_end %></h6>
      <p><%= @trip.description%></p>
      <div style="position:absolute; right:0; bottom:0">
        <%= link_to 'Delete', trip_path(@trip), method: :delete, data: { confirm: "Are you sure you want to delete this trip?" } %>
      </div>
      <div style="position:absolute; right:52px; bottom:0">
        <a href="" data-toggle="modal" data-target="#modalNew" >Edit</a>
      </div>
      <div id="modalNew" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h2>Edit My Trip</h2>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              <%= simple_form_for(@trip) do |f| %>
                <%= f.input :name, label: "Trip Title", :placeholder => 'London City Break 2022' %>
                <%= f.input :destination_exact, label: "Where did you go?", input_html: { data: { geocoder_target: 'address' }, class: 'd-none'}, wrapper_html: {
                  data: { controller: 'geocoder', geocoder_api_key_value: ENV["MAPBOX_API_KEY"] }} %>
                <%= f.input :date_start, as: :date, label: "When did you begin your trip?" %>
                <%= f.input :date_end, as: :date, label: "When did you leave?" %>
                <%= f.input :description, as: :text, label: "Describe your trip:", :placeholder => 'Had a great time. Loved the National Gallery.' %>
                <%= f.input :photo, as: :file, label: "Change your trip's cover photo" %>
                <%= f.submit id: 'submit-button' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="photos-and-quote">
    <div id="photos-container">
      <div class="photo"></div>
      <div class="photo"></div>
      <div class="photo"></div>
    </div>
    <div id="quotes">
      <p>Many who wander are lost<br><span style="font-style:italic">- Unknown</span></p>
    </div>
  </div>
  <a href="" id="add-photo-button">Add Photo</a>
  <a href="" id="delete-photo-button">Delete</a>
</div>
